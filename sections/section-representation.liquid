{% style %}
  #shopify-section-{{section.id}}{
    background: url({{ 'representation-pattern.png' | asset_url }}) no-repeat;
    background-position: center 32%;
    background-size: 1717px auto;
  }
  #shopify-section-{{section.id}} .slick-slide .slide{
    padding-inline: 120px;
    padding-top: 133px;
    transition: all 200ms linear;
  }
  @media only screen and (max-width: 990px) {
    #shopify-section-{{section.id}} .slick-slide .slide{
      padding-inline: 40px;
      padding-top: 0px;
    }
  }
  #shopify-section-{{section.id}} .slick-active .slide{
    padding-inline: 0px;
    padding-top: 0px;
  }
  @media only screen and (max-width: 990px) {
    #shopify-section-{{section.id}} .slick-current .slide{
      margin-inline: auto;
    }
  }
  #shopify-section-{{section.id}} .slick-current .slide .content{
    height: 700px;
  }
  @media only screen and (max-width: 990px) {
    #shopify-section-{{section.id}} .slick-current .slide .content{
      height: 400px;
    }
  }
  #shopify-section-{{section.id}} .slick-current .slide p{
    width: 600px;
  }
  @media only screen and (max-width: 990px) {
    #shopify-section-{{section.id}} .slick-current .slide p{
      width: 100%;
    }
  }
  #shopify-section-{{section.id}} .slick-slide .top, 
  #shopify-section-{{section.id}} .slick-slide h3,
  #shopify-section-{{section.id}} .slick-slide .play-control,
  #shopify-section-{{section.id}} .slick-slide p{
    opacity: 0;
    transition-delay: 200ms;
    transition: all 400ms ease-in-out;
  }
  #shopify-section-{{section.id}} .slick-current .top, 
  #shopify-section-{{section.id}} .slick-current h3,
  #shopify-section-{{section.id}} .slick-current .play-control,
  #shopify-section-{{section.id}} .slick-current p{
    opacity: 1;
    transition-delay: all 0ms;
  }
  #shopify-section-{{section.id}} .slick-current h3{
    transform: scale(1);
    transition-delay: 0ms;
  }
  #shopify-section-{{section.id}} .slide:hover .content{
    background-size: 120% auto;
  }

  #shopify-section-{{section.id}} .slick-current .slide.active h3{
    opacity: 0;
    transform: scale(0.8);
    transition-delay: 0ms;
  }
{% endstyle %}

