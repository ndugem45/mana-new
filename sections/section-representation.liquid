<script>
  $(document).ready(function(){
    $('#shopify-section-{{section.id}} .slider').on('init', function(slick){
      $('#shopify-section-{{section.id}} .container.--full').css('height', $('#shopify-section-{{section.id}} .slider').height()+'px')
      document.querySelectorAll('#shopify-section-{{section.id}} .slide .play-control').forEach((v,i)=>{
          v.addEventListener('click',(elem)=>{
            let video = v.nextElementSibling;
            let parent = v.parentElement.parentElement;
            if(video.paused){
              video.play();
            }else{
              video.pause();
            }

            if(parent.classList.contains('active')){
              parent.classList.remove('active');
            }else{
              parent.classList.add('active');
            }
          })
      })
    });
    $('#shopify-section-{{section.id}} .slider').on('afterChange', function(slick, currentSlide){
      document.querySelectorAll('#shopify-section-{{section.id}} .slide .play-control').forEach((v,i)=>{
        v.nextElementSibling.pause();
        v.parentElement.parentElement.classList.remove('active');
      })
    });

    $('#shopify-section-{{section.id}} .slider').slick({
      centerMode: true,
      variableWidth: true,
      arrows: false,
      dots: false,
      infinite: false,
      adaptiveHeight: false,
      responsive: [
        {
          breakpoint: 990,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            centerMode: false,
            variableWidth: false,
          },
        },
      ]
    });

    $('#shopify-section-{{section.id}} .slider-left').on('click', function () {
      $('#shopify-section-{{section.id}} .slider').slick('slickPrev');
    });

    $('#shopify-section-{{section.id}} .slider-right').on('click', function () {
      $('#shopify-section-{{section.id}} .slider').slick('slickNext');
    });
  });
</script>

